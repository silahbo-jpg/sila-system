{
  "dashboard": {
    "id": null,
    "title": "SILA System Overview",
    "tags": ["sila", "overview", "government"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"sila-system\"}",
            "legendFormat": "System Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Total Services Available",
        "type": "stat",
        "targets": [
          {
            "expr": "150",
            "legendFormat": "Total Services"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "sila_active_users",
            "legendFormat": "Active Users"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(sila_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Request Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(sila_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(sila_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "Top 10 Most Used Services",
        "type": "bargauge",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint, module) (sila_service_usage_total))",
            "legendFormat": "{{module}}/{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "Error Rate by Municipality",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (municipality) (sila_errors_by_municipality_total)",
            "legendFormat": "{{municipality}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 9,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "sila_system_cpu_usage_percent",
            "legendFormat": "CPU %"
          },
          {
            "expr": "(sila_system_memory_usage_bytes{type=\"used\"} / sila_system_memory_usage_bytes{type=\"total\"}) * 100",
            "legendFormat": "Memory %"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 10,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "sila_database_connections",
            "legendFormat": "{{status}} connections"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}